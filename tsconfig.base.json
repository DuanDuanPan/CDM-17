{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@cdm/types": ["packages/types/src"],
      "@cdm/core-server": ["packages/core-server/src"],
      "@cdm/core-client": ["packages/core-client/src"],
      "@cdm/sdk": ["packages/sdk/src"],
      "@cdm/ui": ["packages/ui/src"],
      "@cdm/utils": ["packages/utils/src"],
      "@cdm/database": ["packages/database/src"]
    }
  }
}
